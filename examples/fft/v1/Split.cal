

actor Split (N) In ==> A, B :

	boolean toA := true;
	n := 0;
	
	action In: [v] ==> A: [v]
	guard
		toA
	do
		n := n + 1;
		if n >= N then
			n := 0;
			toA := false;
		end
	end
	
	action In: [v] ==> B: [v]
	guard
		not toA
	do
		n := n + 1;
		if n >= N then
			n := 0;
			toA := true;
		end
	end
end	
	
	
	